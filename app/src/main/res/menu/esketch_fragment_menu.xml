<?xml version="1.0" encoding="utf-8"?>
<menu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <!-- when using Android Support Libraries to provide a
     backward-compatible app bar, you must use the showAsAction attribute
     from the XML namespace app , rather than the XML namespace android -->

    <!-- vector graphics are store in drawable directory -->
    <!-- will display on tool/action/menu bar "if there is room"
    otherwise, the menu item will appear as a text menu item
    in the overflow options menu at the right side of the app bar. -->
    <item
        android:id="@+id/color"
        android:title="@string/menuitem_color"
        android:icon="@drawable/ic_palette_24dp"
        app:showAsAction="ifRoom">
    </item>

    <item
        android:id="@+id/line_width"
        android:title="@string/menuitem_line_width"
        android:icon="@drawable/ic_brush_24dp"
        app:showAsAction="ifRoom">
    </item>

    <item
        android:id="@+id/delete_drawing"
        android:title="@string/menuitem_delete"
        android:icon="@drawable/ic_delete_24dp"
        app:showAsAction="ifRoom">
    </item>

    <item
        android:id="@+id/save"
        android:title="@string/menuitem_save"
        android:icon="@drawable/ic_save_24dp"
        app:showAsAction="ifRoom">
    </item>

    <item
        android:id="@+id/print"
        android:title="@string/menuitem_print"
        android:icon="@drawable/ic_print_24dp"
        app:showAsAction="ifRoom">
    </item>

</menu>